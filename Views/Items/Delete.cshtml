@model Item

<section class="container mt-5">
	<h1 class="alert alert-danger text-center">
		Are you sure you want to delete this?
	</h1>
	<div class="row">
		<dl class="row col-8">
			<dt class="col-2">@Html.DisplayNameFor(item=>item.Name) </dt>
			<dd class="col-10">@Html.DisplayFor(item=>item.Name)</dd>
			<dt class="col-2">@Html.DisplayNameFor(item=>item.Price) </dt>
			<dd class="col-10">@Html.DisplayFor(item=>item.Price)$</dd>
		</dl>
		<div class="col-4">
			<img src="@Model.ImageUrl" alt="@Model.Name" style="width:50%; aspect-ratio:1/1" />
		</div>
	</div>
	<div class="d-flex justify-content-start">
		<form method="post" asp-controller="Items" asp-action="DeleteItem" class="me-3">
			<input type="hidden" asp-for="Id" />
			<button type="submit" class="btn btn-danger">Delete</button>
		</form>
		<a asp-controller="Dashboard" asp-action="GetIndexView" class="btn btn-secondary">Back To List</a>
	</div>
	
</section>

