<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - E_commerce</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/E_commerce.styles.css" asp-append-version="true" />
	<link href="~/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
	<link href="~/css/home.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
			<div class="container">
				<div class="row d-flex justify-content-between">
					<div class="col-3">
						<img src="/images/logo.png" class="navbar-brand" width="90%"/>
					</div>
					<div class="col-2">
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
								aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
					</div>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between col-6">
						<ul class="navbar-nav">
							<li class="nav-item mr">
								<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
							</li>
							<li class="nav-item mr">
								<a class="nav-link" asp-controller="Items" asp-action="GetIndexView">Products</a>
							</li>
							<li class="nav-item mr">
								<a class="nav-link" asp-controller="Dashboard" asp-action="GetIndexView">Dashboard</a>
							</li>
							<li class="nav-item mr">
								<i class="bi bi-cart nav-link"></i>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div>
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - E_commerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
