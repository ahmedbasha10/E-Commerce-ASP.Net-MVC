@model IEnumerable<Item>

<section class="items-dashboard container mt-5">
	<div class="text-center">
		<h2 class="head-section">Admin <span class="head-span">Dashboard</span></h2>
	</div>
	<a asp-controller="Items" asp-action="GetCreateView" class="btn btn-success mb-3">Add New</a>
	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped table-hover text-center">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(i => i.ImageUrl)</th>
					<th>@Html.DisplayNameFor(i => i.Name)</th>
					<th>@Html.DisplayNameFor(i => i.Price)</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td><img src="@item.ImageUrl" alt="@item.Name" width="50" height="60"></td>
						<td>@item.Name</td>
						<td>$@item.Price</td>
						<td>
							<a asp-controller="Items" asp-action="GetEditView"
							   asp-route-id="@item.Id"
							   title="Edit" class="btn btn-outline-primary me-3 mb-2">
								<i class="bi bi-pencil-fill"></i>
							</a>
							<a asp-controller="Items"
							   asp-action="GetDeleteView"
							   asp-route-id="@item.Id" class="btn btn-outline-danger me-3 mb-2"
							   title="Delete"><i class="bi bi-trash-fill"></i></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
</section>